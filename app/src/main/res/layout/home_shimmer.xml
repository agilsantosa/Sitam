<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/classroom_detail_feed_item_photo_shimmer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@color/shimmerColorTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/classroom_detail_feed_item_publisher_name_shimmer"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmerColorTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classroom_detail_feed_item_photo_shimmer"
        app:riv_corner_radius="8dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ic_profile"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:src="@color/shimmerColorTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classroom_detail_feed_item_publisher_name_shimmer" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tvname_shimmer"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmerColorTwo"
        app:layout_constraintBottom_toBottomOf="@+id/ic_profile"
        app:layout_constraintStart_toEndOf="@+id/ic_profile"
        app:layout_constraintTop_toTopOf="@+id/ic_profile"
        app:layout_constraintVertical_bias="0.0"
        app:riv_corner_radius="8dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/tvnpm_shimmer"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@color/shimmerColorTwo"
        app:layout_constraintBottom_toBottomOf="@+id/ic_profile"
        app:layout_constraintStart_toEndOf="@+id/ic_profile"
        app:layout_constraintTop_toTopOf="@+id/ic_profile"
        app:layout_constraintVertical_bias="0.81"
        app:riv_corner_radius="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>