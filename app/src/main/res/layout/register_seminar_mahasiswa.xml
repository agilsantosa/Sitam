<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/register_seminar_confirmation_title_background"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/upload_file_confirmation_title"
            app:layout_constraintBottom_toBottomOf="@id/upload_file_confirmation_title"
            android:src="@color/themeColor"
            />

        <TextView
            android:id="@+id/upload_file_confirmation_title"
            style="@style/MySchool.TextAppearance.GrandTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorPureWhite"
            android:text="@string/daftar_seminar"/>

        <TextView
            style="@style/MySchool.TextAppearance.Title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/saat_ini_anda_belum_terdaftar_sebagai_peserta_seminar"
            app:layout_constraintBottom_toTopOf="@+id/register_seminar_confirmation_cancel_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_seminar_confirmation_title_background" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_seminar_confirmation_cancel_button"
            android:layout_width="100dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/register_seminar_confirmation_upload_button"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/avenir_next_medium"
            android:text="@string/cancel"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/register_seminar_confirmation_upload_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/register_seminar_confirmation_cancel_button"
            android:layout_marginBottom="16dp"
            android:textSize="12sp"
            android:fontFamily="@font/avenir_next_medium"
            android:textColor="@color/colorPureWhite"
            android:text="@string/daftar"/>

        <ProgressBar
            android:id="@+id/register_seminar_confirmation_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/register_seminar_confirmation_cancel_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_file_confirmation_title"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout >